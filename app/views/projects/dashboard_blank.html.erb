<aside class="left">
  <% if @current_user %>
    <div id='user-card'>
      <%= user_card @current_user %>
    </div>
      <%= link_to 'Create a new Project', new_user_project_path, remote: true,
      class: 'btn btn-primary', id: 'new-project-user-btn' %>
      <%= link_to 'Existing Projects', '#', id: 'projects-btn',
          class: 'btn btn-primary' %>
      <div class='projects-nav-gutter'>
        <% @projects.each do |project| %>
          <%= link_to project.name, user_project_path(project),
                class: 'btn btn-secondary', remote: true %>
        <% end %>
      </div>
       <%= link_to 'Log out', logout_path, class: 'btn btn-primary', id: 'logout' %>
  <% else %>
    <%= link_to "Log in or Create an Account", login_path, class: 'btn btn-primary' %>
  <% end %>
</aside>

<div class="container">
  <div id="chartBox">
    <div class='project-box'>
      <%= notice %>
    </div>
    <div class='repo-box'>
      <span class='repo-title'></span>
          </div>
    <div class='trello-box'>
    </div>
  </div>
</div>

<script>
$('#pdp-modal').modal();

$('.modal-title').text('Create a Project!');

$('.modal-body').empty().
  append(() => {
  return 'Welcome to Pitch Day Planner! Get started by creating a new project!'
});

</script>
